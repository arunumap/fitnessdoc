<!DOCTYPE html>
<html lang="en">
  <head>                                                                      
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "FitnessDoc" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
  <nav class="top-bar" data-topbar>
  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li class="active"><a href="#">Right Button Active</a></li>
      <li class="has-dropdown">
        <% if current_admin_user %>
          <%= link_to "Welcome" + current_admin_user.name, user_path(current_admin_user) %>
        <% elsif current_user %>
          <%= link_to "Welcome" + current_user.name, user_path
        <% end %>
        <a href="#">Login</a>
        <ul class="dropdown">
          <li>afaf</li>
        </ul>
      </li>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
    </ul>
  </section>
</nav>

  <% if flash.alert %>
        <div data-alert class="custom-alert-box">
          <%= flash.alert %>
          <a href="#" class="close">&times;</a>
      <% end %>
        </div>
      <% if flash.notice %>
        <div data-alert class="custom-alert-box-positive">
          <%= flash.notice %>
          <a href="#" class="close">&times;</a>
      <% end %>
        </div>
   

	
	<% if current_admin_user %>
		<h1>Welcome <%= current_admin_user.name %> </h1>
		<%= link_to "log out", logout_path %>
	<% elsif current_user %>
		<%= link_to "log out", logout_path %>
	<% else %>
		<%= link_to "sign up", signup_path %>
		<%= link_to "login", login_path %>
		<%= link_to "Sign in with Fitbit", "/auth/fitbit"%>
	<% end %>

    <%= yield %>
    <%= javascript_include_tag "application" %>
  </body>
</html>